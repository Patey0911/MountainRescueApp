<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MountainRescueApp.RescueRegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Same gradient background as login page -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0A6FAF" Offset="0.0" />
            <GradientStop Color="#1A8FBF" Offset="0.5" />
            <GradientStop Color="#34BCCC" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <VerticalStackLayout
            Padding="10,5,10,50"
            Spacing="12"
            VerticalOptions="Center"
            HorizontalOptions="FillAndExpand">

            <!-- Logo -->
            <Image
                Source="mountainrescue_imageimag.png"
                HeightRequest="200"
                Aspect="AspectFit"
                HorizontalOptions="Center" />

            <!-- CNP -->
            <Frame BackgroundColor="DarkSlateBlue" CornerRadius="10" Padding="10,0" HeightRequest="44">
                <Entry x:Name="txtCNP"
                       Placeholder="CNP"
                       TextColor="White"
                       PlaceholderColor="#D0EFFF"
                       Keyboard="Numeric"
                       FontSize="15"
                       Completed="txtCNP_Completed"/>
            </Frame>

            <!-- Identification Code -->
            <Frame BackgroundColor="DarkSlateBlue" CornerRadius="10" Padding="10,0" HeightRequest="44">
                <Entry x:Name="txtCodID"
                       Placeholder="Identification Code"
                       TextColor="White"
                       PlaceholderColor="#D0EFFF"
                       FontSize="15"
                       Completed="txtCodID_Completed"/>
            </Frame>

            <!-- Name -->
            <Frame BackgroundColor="DarkSlateBlue" CornerRadius="10" Padding="10,0" HeightRequest="44">
                <Entry x:Name="txtName"
                       Placeholder="Name"
                       TextColor="White"
                       PlaceholderColor="#D0EFFF"
                       FontSize="15"
                       Completed="txtName_Completed"/>
            </Frame>

            <!-- Phone -->
            <Frame BackgroundColor="DarkSlateBlue" CornerRadius="10" Padding="10,0" HeightRequest="44">
                <Entry x:Name="txtNr_Telefon"
                       Placeholder="Mobile Number"
                       TextColor="White"
                       PlaceholderColor="#D0EFFF"
                       Keyboard="Telephone"
                       FontSize="15"
                       Completed="txtNr_Telefon_Completed"/>
            </Frame>

            <!-- Email -->
            <Frame BackgroundColor="DarkSlateBlue" CornerRadius="10" Padding="10,0" HeightRequest="44">
                <Entry x:Name="txtEmail"
                       Placeholder="E-Mail"
                       TextColor="White"
                       PlaceholderColor="#D0EFFF"
                       Keyboard="Email"
                       FontSize="15"
                       Completed="txtEmail_Completed"/>
            </Frame>

            <!-- Mountain -->
            <Frame BackgroundColor="DarkSlateBlue" CornerRadius="10" Padding="10,0" HeightRequest="44">
                <Entry x:Name="txtMountain"
                       Placeholder="Mountain"
                       TextColor="White"
                       PlaceholderColor="#D0EFFF"
                       FontSize="15"
                       Completed="txtMountain_Completed"
                       Focused="txtMountain_Focused"/>
            </Frame>

            <!-- Password (icon inside frame) -->
            <Frame BackgroundColor="DarkSlateBlue"
                   CornerRadius="10"
                   Padding="10,0"
                   HeightRequest="44">

                <Grid ColumnDefinitions="*,Auto">

                    <Entry x:Name="txtPassword"
                           Placeholder="Password"
                           TextColor="White"
                           PlaceholderColor="#D0EFFF"
                           FontSize="15"
                           IsPassword="True"
                           Completed="txtPassword_Completed"/>

                    <Image Grid.Column="1"
                           x:Name="password_icon"
                           Source="HidePasswordWhite.png"
                           HeightRequest="22"
                           VerticalOptions="Center"
                           Margin="0,0,5,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>

                </Grid>
            </Frame>

            <!-- Confirm Password (icon inside frame) -->
            <Frame BackgroundColor="DarkSlateBlue"
                   CornerRadius="10"
                   Padding="10,0"
                   HeightRequest="44">

                <Grid ColumnDefinitions="*,Auto">

                    <Entry x:Name="txtPassword_Confirm"
                           Placeholder="Confirm Password"
                           TextColor="White"
                           PlaceholderColor="#D0EFFF"
                           FontSize="15"
                           IsPassword="True"/>

                    <Image Grid.Column="1"
                           x:Name="password_icon2"
                           Source="HidePasswordWhite.png"
                           HeightRequest="22"
                           VerticalOptions="Center"
                           Margin="0,0,5,0">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped_1"/>
                        </Image.GestureRecognizers>
                    </Image>

                </Grid>
            </Frame>

            <!-- Register Button -->
            <Button
                x:Name="RegisterButton"
                Text="Register"
                FontSize="17"
                FontAttributes="Bold"
                TextColor="White"
                BackgroundColor="#1E90FF"
                CornerRadius="20"
                HeightRequest="46"
                Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
