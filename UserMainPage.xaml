<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="MountainRescueApp.UserMainPage"
             Title="UserMainPage">

    <!-- Use an AbsoluteLayout so we can overlay buttons on the map -->
    <AbsoluteLayout x:Name="RootLayout">

        <!-- Full-screen map -->
        <maps:Map x:Name="mappy"
                  IsShowingUser="True"
                  IsTrafficEnabled="True"
                  MapType="Satellite"
                  AbsoluteLayout.LayoutFlags="All"
                  AbsoluteLayout.LayoutBounds="0,0,1,1" />

        <!-- Start/Stop Tracking (center bottom) -->
        <Button x:Name="TrackButton"
                Text="Start Tracking"
                Clicked="TrackButton_Clicked"
                BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                TextColor="{DynamicResource ButtonTextColor}"
                Padding="18,12"
                CornerRadius="24"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0.5,0.95,-1,-1"
                Margin="0,0,0,16" />

        <!-- Report Emergency FAB (bottom-right). Hidden until tracking is ON -->
        <ImageButton x:Name="EmergencyButton"
                     IsVisible="False"
                     Clicked="EmergencyButton_Clicked"
                     BackgroundColor="OrangeRed"
                     CornerRadius="28"
                     WidthRequest="56"
                     HeightRequest="56"
                     Padding="0"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     AbsoluteLayout.LayoutBounds="0.95,0.92,56,56"
                     Margin="0,0,16,16">
            <ImageButton.Source>
                <!-- FontImageSource uses Size (not FontSize). 
                     If glyph doesn't render on a platform, replace with a PNG in Resources/Images -->
                <FontImageSource Glyph="&#x26A0;" Size="28" Color="White" />
            </ImageButton.Source>
        </ImageButton>

    </AbsoluteLayout>
</ContentPage>
