<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             x:Class="MountainRescueApp.UserMainPage"
             Title="UserMainPage">

    <AbsoluteLayout x:Name="RootLayout">

        <Frame x:Name="RescueBanner"
               IsVisible="False"
               BackgroundColor="DarkGreen"
               CornerRadius="0"
               Padding="12"
               AbsoluteLayout.LayoutFlags="WidthProportional"
               AbsoluteLayout.LayoutBounds="0,0,1,60">
            <Label Text="O echipă de salvare este în drum spre tine!"
                   TextColor="White"
                   FontSize="20"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" />
        </Frame>

        <maps:Map x:Name="mappy"
                  IsShowingUser="True"
                  IsTrafficEnabled="True"
                  MapType="Satellite"
                  AbsoluteLayout.LayoutFlags="All"
                  AbsoluteLayout.LayoutBounds="0,0,1,1" />

        <Button x:Name="TrackButton"
                Text="Start Tracking"
                Clicked="TrackButton_Clicked"
                BackgroundColor="{DynamicResource ButtonBackgroundColor}"
                TextColor="{DynamicResource ButtonTextColor}"
                Padding="18,12"
                CornerRadius="24"
                AbsoluteLayout.LayoutFlags="PositionProportional"
                AbsoluteLayout.LayoutBounds="0.5,0.95,-1,-1"
                Margin="0,0,0,16" />

        <ImageButton x:Name="EmergencyButton"
                     IsVisible="True"
                     IsEnabled="False"
                     Clicked="EmergencyButton_Clicked"
                     BackgroundColor="OrangeRed"
                     CornerRadius="28"
                     WidthRequest="56"
                     HeightRequest="56"
                     Padding="0"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     AbsoluteLayout.LayoutBounds="0.95,0.92,56,56"
                     Margin="0,0,-25,100">
            <ImageButton.Source>
                <FontImageSource Glyph="&#x26A0;" Size="28" Color="White" />
            </ImageButton.Source>
        </ImageButton>

    </AbsoluteLayout>
</ContentPage>
